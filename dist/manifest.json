{
  "name": "JIRA Modal Tamer",
  "description" : "Tame JIRA modal windows, allowing you to drag and peek them.",
  "version": "0.0.2",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*"],
      "js": ["index.min.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
   "128": "icon-128.png"
  },
  "manifest_version": 2
}
